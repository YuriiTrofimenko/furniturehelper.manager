<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="items" type="org.tyaa.fhelpermodel.LinkList"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:bind="http://schemas.android.com/apk/lib/com.app.chasebank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/viberTabLayout"
                            android:background="#CCCCCC"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <org.tyaa.furniturehelper.manager.widget.RatioImageView
                                android:id="@+id/viberTabImageView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@drawable/viber"
                                android:layout_gravity="center"
                                android:layout_weight="7"
                                android:clickable="true"
                                android:focusable="true" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:lines="1"
                                android:gravity="center_vertical"
                                android:text="Viber"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="3"
                                android:clickable="false"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/whatsappTabLayout"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <org.tyaa.furniturehelper.manager.widget.RatioImageView
                                android:id="@+id/whatsappTabImageView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@drawable/whatsapp"
                                android:layout_gravity="center"
                                android:layout_weight="7"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:lines="1"
                                android:gravity="center_vertical"
                                android:text="Whatsapp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="3"
                                android:clickable="false"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/telegramTabLayout"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <org.tyaa.furniturehelper.manager.widget.RatioImageView
                                android:id="@+id/telegramTabImageView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@drawable/telegram"
                                android:layout_gravity="center"
                                android:layout_weight="7"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:lines="1"
                                android:gravity="center_vertical"
                                android:text="Telegram"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="3"
                                android:clickable="false"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/smsTabLayout"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <org.tyaa.furniturehelper.manager.widget.RatioImageView
                                android:id="@+id/smsTabImageView"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@drawable/sms"
                                android:layout_gravity="center"
                                android:layout_weight="7"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:lines="1"
                                android:gravity="center_vertical"
                                android:text="SMS"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="3"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="70"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

                    <ListView
                        android:id="@+id/listView"
                        android:longClickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:link_list="@{items.mLinkItemList}">

                    </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/exitImageButton"
                    android:text="Cancel"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:clickable="true"
                    android:focusable="true"/>
                <ImageButton
                    android:id="@+id/addGroupImageButton"
                    android:text="+"
                    android:src="@android:drawable/ic_menu_add"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:clickable="true"
                    android:focusable="true"/>
                <ImageButton
                    android:id="@+id/sendImageButton"
                    android:text="Send"
                    android:src="@android:drawable/ic_menu_send"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:clickable="true"
                    android:focusable="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_edit" />
    </FrameLayout>
</layout>