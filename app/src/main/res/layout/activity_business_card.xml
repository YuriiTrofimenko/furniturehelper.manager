<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="items" type="org.tyaa.furniturehelper.manager.model.LinkList"/>
    </data>

    <LinearLayout
        xmlns:bind="http://schemas.android.com/apk/lib/com.app.chasebank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/viberTabLayout"
                android:background="#CCCCCC"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/viberTabImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/viber"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:text="Viber"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:clickable="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatsappTabLayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/whatsappTabImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/whatsapp"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:text="Whatsapp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:clickable="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/telegramTabLayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/telegramTabImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/telegram"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:text="Telegram"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:clickable="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/smsTabLayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/smsTabImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/sms"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:text="SMS"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="70"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:link_list="@{items.mLinkItemList}">

                </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:text="Cancel"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:text="+"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:text="Ok"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</layout>